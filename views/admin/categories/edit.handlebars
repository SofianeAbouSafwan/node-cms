<h1>Edit Category</h1>
<div class="row">
  <div class="col-sm-4">
    <form
      action="/admin/categories/edit/{{category.id}}?_method=PUT"
      method="post"
    ><!-- method Step 101 -->
      <div class="form-group">
        <label for="name">Name</label>
        <input
          value="{{category.name}}"
          type="text"
          name="name"
          placeholder="Enter title"
          class="form-control"
        /><!-- value Step 104 -->
      </div>
      <button class="btn btn-primary">Update Category</button>
    </form>
  </div>
</div>