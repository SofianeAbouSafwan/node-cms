<h1>Create Category</h1>
<div class="row">
  <div class="col-sm-4">
    <form action="/admin/categories/create" method="post">
      <div class="form-group">
        <label for="name">Name</label>
        <input
          type="text"
          name="name"
          placeholder="Enter title"
          class="form-control"
        />
      </div>
      <button class="btn btn-primary">Create Category</button>
    </form>
  </div>

  <div class="col-sm-8">
    <h5>All Categories</h5>
    <table class="table">
      <thead>
        <tr>
          <th>Id</th>
          <th>Name</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>

        {{#each categories}}

          <tr>
            <td>{{id}}</td>
            <td>{{name}}</td>
            <td><a
                href="/admin/categories/edit/{{id}}"
                class="btn btn-info"
              >Edit</a></td>
            <td>
              <form
                action="/admin/categories/{{id}}?_method=DELETE"
                method="post"
              >
                <button class="btn btn-danger">Delete</button>
              </form>
            </td>
          </tr>

        {{/each}}

      </tbody>

    </table>
  </div>
</div>