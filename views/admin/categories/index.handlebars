<!-- Step 98 -->
<h1>Create Category</h1>
<div class="row"><!-- Step 99 -->
  <div class="col-sm-4">
    <form
      action="/admin/categories/create"
      method="post"
    ><!-- method Step 101 -->
      <div class="form-group">
        <label for="name">Name</label>
        <input
          type="text"
          name="name"
          placeholder="Enter title"
          class="form-control"
        />
      </div>
      <button class="btn btn-primary">Create Category</button>
    </form>
  </div>

  <div class="col-sm-8"><!-- Step 100 -->
    <h5>All Categories</h5>
    <table class="table">
      <thead>
        <tr>
          <th>Id</th>
          <th>Name</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>

        {{#each categories}}<!-- Step 102 -->

          <tr>
            <td>{{id}}</td><!-- id Step 102 -->
            <td>{{name}}</td><!-- name Step 102 -->
            <td><a
                href="/admin/categories/edit/{{id}}"
                class="btn btn-info"
              >Edit</a></td><!-- Step 103 -->
            <td>
              <form
                action="/admin/categories/{{id}}?_method=DELETE"
                method="post"
              >
                <button class="btn btn-danger">Delete</button>
              </form><!-- Step 106 -->
            </td>
          </tr>

        {{/each}}

      </tbody>

    </table>
  </div>
</div>